header.wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1200px;
  margin: 20px auto 0;
}

header .link {
  font-size: 16px;
  font-weight: 500;
  line-height: 20px;
  letter-spacing: 0;
  text-decoration: none;
  text-transform: uppercase;
  margin-left: 60px;
  color: var(--text-color);
}

header .link:hover {
  color: var(--main-color);
}

header .link.active {
  border-bottom: 3px solid var(--main-color);
}

header svg {
  width: 109px;
}
